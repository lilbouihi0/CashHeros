{
  "manifest_version": 3,
  "name": "CashHeros - Coupons & Cash Back",
  "version": "1.0.0",
  "description": "Find and apply the best coupons and cash back offers while shopping online",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "CashHeros"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*", 
        "*://*.walmart.com/*", 
        "*://*.target.com/*", 
        "*://*.bestbuy.com/*",
        "*://*.ebay.com/*",
        "*://*.newegg.com/*",
        "*://*.homedepot.com/*",
        "*://*.lowes.com/*",
        "*://*.macys.com/*",
        "*://*.kohls.com/*",
        "*://*.nordstrom.com/*",
        "*://*.gap.com/*",
        "*://*.oldnavy.com/*",
        "*://*.nike.com/*",
        "*://*.adidas.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "permissions": [
    "storage",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.cashheros.com/*"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  }
}