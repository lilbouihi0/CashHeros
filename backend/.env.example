# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/cashheros

# Database Configuration
DB_MONITORING_ENABLED=true
DB_BACKUP_ENABLED=true
DB_BACKUP_CRON="0 0 * * *"

# Redis Configuration (for caching)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_KEY_PREFIX=cashheros:

# AWS Configuration (for backups)
AWS_BACKUP_ENABLED=false
AWS_BACKUP_BUCKET=your-backup-bucket
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
FRONTEND_URL=http://localhost:3000

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Security Configuration
CSRF_SECRET=your_csrf_secret_key_here
COOKIE_SECRET=your_cookie_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://cashheros.com,https://www.cashheros.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000
AUTH_RATE_LIMIT_MAX=10

# API Keys
ANALYTICS_API_KEY=your_analytics_api_key
ADMIN_API_KEY=your_admin_api_key

# External Services
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn