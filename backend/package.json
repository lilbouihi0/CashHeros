{
  "name": "cashheros-backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:cluster": "NODE_ENV=production CLUSTER_ENABLED=true node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/*.test.js'",
    "test:unit": "jest --testMatch='**/unit/**/*.test.js'",
    "test:performance": "k6 run performance/load-test.js",
    "db:seed": "node scripts/seed.js",
    "db:seed:all": "node scripts/seed.js all",
    "db:seed:clear": "node scripts/seed.js clear",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "db:migrate": "node scripts/migrate.js up",
    "db:migrate:down": "node scripts/migrate.js down",
    "db:migrate:create": "node scripts/migrate.js create",
    "db:migrate:status": "node scripts/migrate.js status",
    "cache:clear": "node scripts/clear-cache.js",
    "monitor": "node scripts/monitor.js"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "aws-sdk": "^2.1502.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.0.1",
    "google-auth-library": "^9.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.1",
    "qrcode": "^1.5.3",
    "sanitize-html": "^2.11.0",
    "speakeasy": "^2.0.0",
    "winston": "^3.11.0",
    "xss": "^1.0.14",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "middleware/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 70,
        "functions": 70,
        "lines": 70
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}
